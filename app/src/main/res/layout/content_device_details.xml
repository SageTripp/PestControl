<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:showIn="@layout/activity_device_details">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/blue"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/device_details_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textSize="18sp"
                tools:text="区域:高新区"/>

            <TextView
                android:id="@+id/device_details_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:textColor="@color/toolbar_text"
                android:textSize="12sp"
                tools:text="具体地点:水电费水电费"/>

            <TextView
                android:id="@+id/device_details_position"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:textColor="@color/toolbar_text"
                android:textSize="12sp"
                tools:text="坐标:29.047453N119.276586E"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/device_details_param_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/DEEP_ORANGE"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <Button
            android:id="@+id/device_details_edit_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="end"
            android:background="@drawable/ic_device_edit"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/device_details_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textSize="18sp"
                tools:text="设备状态:在用"/>

            <TextView
                android:id="@+id/device_details_collect_interval"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:textColor="@color/toolbar_text"
                android:textSize="12sp"
                tools:text="采集间隔:20"/>

            <TextView
                android:id="@+id/device_details_upload_interval"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:textColor="@color/toolbar_text"
                android:textSize="12sp"
                tools:text="上传间隔:20"/>

            <TextView
                android:id="@+id/device_details_tels"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:textColor="@color/toolbar_text"
                android:textSize="12sp"
                tools:text="报警电话:1231213232"/>

            <TextView
                android:id="@+id/device_details_pest_threshold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:textColor="@color/toolbar_text"
                android:textSize="12sp"
                tools:text="害虫阈值:0010"/>
            <TextView
                android:id="@+id/device_details_environment_threshold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:textColor="@color/toolbar_text"
                android:textSize="12sp"
                tools:text="害虫阈值:0010"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>